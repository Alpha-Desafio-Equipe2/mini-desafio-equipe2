{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "backend/src",
    "outDir": "backend/dist",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "backend/src",
    "backend/tests"
  ],
  "exclude": [
    "node_modules",
    "backend/tests"
  ],
  "ts-node": {
    "esm": true
  }
}